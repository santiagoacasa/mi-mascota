<h2 class="text-center">Editar {{pet.name}}</h2>

<form class="form-group mx-4" action="/edit/pet-profile/{{pet._id}}" method="POST" enctype="multipart/form-data">
  <label for="profilePicContainer">Foto</label>
  <div class="custom-file" id="profilePicContainer">
    <input type="file" class="custom-file-input" id="profilePic" name="pic" accept="image/png, image/jpeg">
    <label class="custom-file-label form-control" for="profilePic" id="profilePicName">Elige un archivo</label>
  </div>
  <label for="name">Nombre</label>
  <input class="form-control" type="text" name="name" value="{{pet.name}}" required />
  <label for="animal">Tipo</label>
  <select class="form-control" name="animal" required>
    <option value="Gato">Gato</option>
    <option value="Perro">Perro</option>
  </select>
  <label for="breed">Raza</label>
  <input class="form-control" type="text" name="breed" required value="{{pet.breed}}" />
  <label for="birthdate">Fecha de nacimiento</label>
  <input class="form-control" type="date" id="petBirth" name="birthdate" placeholder="Puede ser aproximada"
    value="{{pet.birthdate}}" required />
  <label for="age">Edad</label>
  <input class="form-control" type="number" id="petAge" name="age" min="1" readonly required value="{{pet.age}}" />
    <div class="d-flex mt-3">
      <button class="btn btn-secondary w-50 mr-1"><a href="/pet-profile/{{pet._id}}" class="text-decoration-none text-white">Cancelar</a></button>
      <button class="btn btn-success w-50"type="submit">Guardar</button>
    </div>
</form>

<form class="form-group mx-4" action="/delete/pet/{{pet._id}}" method="POST">
  <button type="submit" class="btn btn-danger w-100 mt-4">Borrar mascota</button>
</form>
{{#if errorMessage}}
<p>{{errorMessage}}</p>
{{/if}}
<script src="/javascripts/createPet/petAge.js"></script>
<script src="/javascripts/formsScripts/fileName.js"></script>


