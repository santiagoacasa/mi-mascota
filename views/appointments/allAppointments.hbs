
{{#if userInSession}}
{{#each petAppointments}}
<a href="/appointment/{{this._id}}">
<div class="card">
  <h3 class="card-text">{{this.title}}</h3>
  <div class="card-body">
    <p class="card-title">{{this.pet.name}}</p>
    <p class="card-text">Veterinarix: {{this.vet}}</p>
    <p class="card-text"><span id="date-view">{{this.date}}</span></p>
    <p class="card-text">{{this.time}}</p>
  </div>
</div>
</a>
{{else}}
<p>No tienes ninguna cita creada.</p>
{{/each}}
<a class="btn btn-secondary" href="/create/appointment">AÃ±adir cita</a>
{{/if}}
