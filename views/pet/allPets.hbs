<h2>Mis mascotas</h2>
<div class="container">
  {{#each myPets}}
  <div class="petCard">
    <div class="petCardImg">
      <img src="{{this.pic}}" alt="pet picture" width="258px" height="258px">
    </div>
    <div class="petCardDetails">
      <p>{{this.name}}</p>
      <p>{{this.age}} a√±os</p>
      <a class="btn btn-warning" href="/pet-profile/{{this._id}}">Editar</a>
    </div>
  </div>
  {{/each}}
</div>
<a class="btn btn-secondary" href="/user-profile">Mi Perfil</a>

 

